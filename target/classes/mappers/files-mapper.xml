<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.cafe.mbti.FilesMapper">
	<!-- 게시글 삭제 시 게시글 번호 초기화 -->
	<insert id="insert">
		INSERT
		INTO ${files}
		(${boardNumber}, ${filesName})
		VALUES
		(#{boardNumber}, #{filesName})
	</insert>
	<delete id="deleteOnBoard">
		DELETE
		FROM ${files}
		WHERE ${boardNumber} = #{boardNumber}
	</delete>
</mapper>